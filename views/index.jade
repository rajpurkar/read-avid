extends layout

block content
	.navbar.navbar-default.navbar-static-top(role='navigation')
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/') Avidread
			.navbar-collapse.collapse
				ul.nav.navbar-nav.navbar-right
					li
						a(href='/')
							| Welcome #{user}
					li
						form.navbar-form(action="/logout", method="post")
							button.btn.btn-default(type="submit")
								| Logout
	p!=message
	#content.container
		#books.col-md-4
			.row
				h1 books
			ul
				-each book in books
					.row
						li
							h3=book.title
							p=book.description
		#users.col-md-4
			.row
				h1 Users
			ul
				-each user in users
					.row
						li
							h3=user.username
							h4=user.books
		#future.col-md-4
			.row
				h3 Add a new book
			.row
				form(action="/submit", method="post", role="form")
					input.form-control(type="text", name="title", placeholder="Title" required)
					textarea.form-control(type="text", name="desc", placeholder="Enter Description Here", rows="3" required)
					button#submitBtn.btn.btn-default.col-xs-12.form-control(type="submit")
						| Submit