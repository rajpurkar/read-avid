extends layout

block content
	#current
		h2 Books
		ul
			-each book in books
				li
					h3=book.title
					p=book.description
	#future
		h2 Add a new book
		form(action="/submit", method="post")
			input(type="text", name="title", placeholder="Title")
			input(type="text", name="desc", placeholder="Enter Description Here")
			input(type="submit", value="Submit")