extends layout

block content
	.navbar.navbar-default.navbar-static-top(role='navigation')
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/') Avidlet
			.navbar-collapse.collapse
				ul.nav.navbar-nav.navbar-right
					li
						a(href='/')
							| Welcome #{user}
					li
						form.navbar-form(action="/logout", method="post")
							button.btn.btn-default(type="submit")
								| Logout
	p!=message
	#content.container
		#books.col-md-4
		#users.col-md-4
			.row
				h1 Users
			ul
				-each user in users
					.row
						li
							h3=user.username
							ul
								-each book in user.books
									.row
										li
											h4=book
		#future.col-md-4
			.row
				h3 Add a new book
			.row
				form(action="/submit", method="post", role="form")
					input.form-control(type="text", name="title", placeholder="Title" required)
					input.form-control(type="text", name="author", placeholder="Author" required)
					button#submitBtn.btn.btn-default.col-xs-12.form-control(type="submit")
						| Submit